{
    "metadata": {
      "DEBUG": "false",
      "PROJECT_WORKSPACE": "springboot-kotlin",
      "ARTIFACT_OUTPUT": "true",
      "ARTIFACT_OUTPUT_DESTINATION": "build",
      "REMOVAL_POLICY": "DESTROY",
      "CODESCAN_REPORTING_ENABLED": "false",
      "IMAGE_REPORTING_ENABLED": "false"
    },
    "label": {
      "customer": "mrwconsulting",
      "project": "springboot-kotlin"
    },
    "codestar": {
      "id": "xxxxxxxxxxxxxxxxxxxxxxx",
      "owner": "mrwconsulting",
      "branch": "main",
      "repository": "shinto-samples",
      "codeBuildCloneOutput": true,
      "triggerOnPush": false
    },
    "buildSpec": {
      "type": "JAVA",
      "packageManager": "GRADLE",
      "codeScanType": ["CODACY","SNYK"],
      "env" : {
        "PACKAGE_WRAPPER_ENABLED": "true"
      }
