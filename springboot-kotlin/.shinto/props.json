    "imageBuilder": {
      "type": "BUILDPACK",
      "enabled": true,
      "imageScanType": ["ECR","SNYK"]
    },
    "deploy": {
      "type": "MANIFEST",
      "enabled": false,
      "global": {
        "region": ["us-west-1"],
        "approval": true,
        "clusterName": "shinto"
      },
      "stage": [
        {
          "approval": false,
          "target": "DEV",
          "account": "xxxxxxxxxxxxxx"
        }
      ]
    }
}